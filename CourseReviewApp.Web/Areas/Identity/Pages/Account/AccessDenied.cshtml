@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<div class="container">
    <div class="d-flex row justify-content-center mt-4">
        <div class="card bg-light p-3 col-12 col-sm-11 col-md-10 col-lg-8 col-xl-7">
            <h1 class="text-danger text-center"><i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]</h1>
            <hr />
            <h3 class="text-danger text-center mb-5">You do not have access to this action</h3>
        </div>
    </div>
</div>


