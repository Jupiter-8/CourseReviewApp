@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 card p-4 bg-light">
            <div class="d-flex justify-content-center mb-3 mr-5">
                <h1 class="text-secondary"><i class="fas fa-user-plus"></i> @ViewData["Title"]</h1>
            </div>
            <form method="post">
                <div class="form-group my-4">
                    <div class="d-flex">
                        <span class="input-group-text rounded-left register-form-field-icon border-right-0"><i class="fas fa-user"></i></span>
                        <input placeholder="Username" asp-for="Input.Username" class="form-control shadow-none register-form-field-input col-11" />
                        <button class="btn btn-transparent btn-pos btn-clear" type="button">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group my-4">
                    <div class="d-flex">
                        <span class="input-group-text rounded-left register-form-field-icon border-right-0"><i class="fas fa-at"></i></span>
                        <input placeholder="Email" asp-for="Input.Email" class="form-control shadow-none register-form-field-input col-11" />
                        <button class="btn btn-transparent btn-pos btn-clear" type="button">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group my-4">
                    <div class="d-flex">
                        <span class="input-group-text rounded-left register-form-field-icon border-right-0"><i class="fas fa-key"></i></span>
                        <input placeholder="Password" asp-for="Input.Password" class="form-control shadow-none register-form-field-input col-11" autocomplete="off" />
                        <button class="btn btn-transparent btn-pos btn-clear" type="button">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group my-4">
                    <div class="d-flex">
                        <span class="input-group-text rounded-left register-form-field-icon border-right-0"><i class="fas fa-key"></i></span>
                        <input placeholder="Confirm password" asp-for="Input.ConfirmPassword" class="form-control register-form-field-input col-11" autocomplete="off" />
                        <button class="btn btn-transparent btn-pos btn-clear" type="button">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group my-4">
                    <div class="d-flex">
                        <span class="input-group-text rounded-left register-form-field-icon border-right-0"><i class="fas fa-address-card"></i></span>
                        <input placeholder="Firstname" asp-for="Input.Firstname" class="form-control shadow-none register-form-field-input col-11" />
                        <button class="btn btn-transparent btn-pos btn-clear" type="button">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Firstname" class="text-danger"></span>
                </div>
                <div class="form-group my-4">
                    <div class="d-flex">
                        <span class="input-group-text rounded-left register-form-field-icon border-right-0"><i class="fas fa-address-card"></i></span>
                        <input placeholder="Lastname" asp-for="Input.Lastname" class="form-control shadow-none register-form-field-input col-11" />
                        <button class="btn btn-transparent btn-pos btn-clear" type="button">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Lastname" class="text-danger"></span>
                </div>
                <div id="course-owner-fields" hidden>
                    <div class="form-group my-4">
                        <div class="d-flex">
                            <span class="input-group-text rounded-left register-form-field-icon border-right-0"><i class="fas fa-globe"></i></span>
                            <input placeholder="Website URL" id="register-websiteurl-input" asp-for="Input.WebsiteUrl" class="form-control shadow-none register-form-field-input col-11" />
                            <button class="btn btn-transparent btn-pos btn-clear" type="button">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="form-group my-4">
                        <div class="d-flex">
                            <span class="input-group-text rounded-left register-form-field-icon border-right-0"><i class="far fa-copyright"></i></span>
                            <input placeholder="Brandname" id="register-brandname-input" asp-for="Input.Brandname" class="form-control shadow-none register-form-field-input col-11" />
                            <button class="btn btn-transparent btn-pos btn-clear" type="button">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.UserType"></label>
                    <input asp-for="Input.UserType" id="user-type-input" style="visibility:hidden" type="text" value="" />
                    <div class="custom-control custom-radio mb-2">
                        <input class="custom-control-input" type="radio" name="user-type-radio-btn" id="rd-1" value="2">
                        <label class="custom-control-label" for="rd-1">
                            Course client
                        </label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input class="custom-control-input" type="radio" name="user-type-radio-btn" id="rd-2" value="1">
                        <label class="custom-control-label" for="rd-2">
                            Course owner
                        </label>
                    </div>
                    <span asp-validation-for="Input.UserType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <input style="visibility:hidden" type="text" value="0" asp-for="Input.TermsAccepted" id="terms-accept-input" />
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="terms-accept-checkbox">
                        <label class="custom-control-label" for="terms-accept-checkbox">
                            I agree to the
                            <a class="card-link text-info" href="~/Documents/terms_and_conditions_file.pdf" target="_blank">Terms and Conditions</a>
                        </label>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-info shadow mt-3">Register</button>
                </div>
                <div asp-validation-summary="All" class="text-danger mt-3"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Pages/register.js"></script>
}
