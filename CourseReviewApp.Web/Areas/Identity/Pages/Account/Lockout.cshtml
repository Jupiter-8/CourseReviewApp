@page
@model LockoutModel
@{
    ViewData["Title"] = "Account locked out";
}

<div class="container">
    <div class="d-flex row justify-content-center mt-4">
        <div class="card bg-light p-3 col-12 col-sm-11 col-md-10 col-lg-8 col-xl-7">
            <h1 class="text-danger text-center">@ViewData["Title"]</h1>
            <hr/>
            <p class="text-danger">This account has been locked out due to too many failed login attempts.</p>
            <p class="text-danger">Please try login again later or <a class="text-decoration-none text-info" asp-page="\ForgotPassword">reset yor password</a>.</p>
        </div>
    </div>
</div>
