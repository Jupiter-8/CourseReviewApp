@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="container">
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 card p-4 bg-light">
            <div class="d-flex justify-content-center mb-3">
                <h1 class="font-weight-light text-center">@ViewData["Title"]</h1>
            </div>
            <form method="post">
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-group my-4">
                    <div class="d-flex">
                        <span class="input-group-text rounded-left register-form-field-icon border-right-0"><i class="fas fa-at"></i></span>
                        <input placeholder="Email" asp-for="Input.Email" class="form-control shadow-none register-form-field-input col-11" />
                        <button class="btn btn-transparent btn-pos btn-clear" type="button">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group my-4">
                    <div class="d-flex">
                        <span class="input-group-text rounded-left register-form-field-icon border-right-0"><i class="fas fa-key"></i></span>
                        <input placeholder="New password" asp-for="Input.Password" class="form-control shadow-none register-form-field-input col-11" autocomplete="off" />
                        <button class="btn btn-transparent btn-pos btn-clear" type="button">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group my-4">
                    <div class="d-flex">
                        <span class="input-group-text rounded-left register-form-field-icon border-right-0"><i class="fas fa-key"></i></span>
                        <input placeholder="Confirm new password" asp-for="Input.ConfirmPassword" class="form-control shadow-none register-form-field-input col-11" autocomplete="off" />
                        <button class="btn btn-transparent btn-pos btn-clear" type="button">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center mt-5">
                    <button type="submit" class="btn btn-info">Confirm</button>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
