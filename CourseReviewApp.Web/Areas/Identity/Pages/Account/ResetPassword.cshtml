@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="container">
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 card p-4 bg-light">
            <div class="d-flex justify-content-center mb-3">
                <h1 class="font-weight-light text-center">@ViewData["Title"]</h1>
            </div>
            <form method="post">
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control shadow-none" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control shadow-none" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control shadow-none" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-info">Confirm</button>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
