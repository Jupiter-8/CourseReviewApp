@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="container">
    <div class="d-flex row justify-content-center mt-4">
        <div class="card col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 p-3 bg-light">
            <h1 class="font-weight-light text-center">@ViewData["Title"]</h1>
            <hr />
            <p class="mb-3">Enter our email adress, if an account associated with it exists, we will sent you a message with a email confirmation link.</p>
            <form method="post">
                <div class="form-group">
                    <div class="d-flex">
                        <span class="input-group-text rounded-left register-form-field-icon border-right-0"><i class="fas fa-at"></i></span>
                        <input placeholder="Email" asp-for="Input.Email" class="form-control shadow-none register-form-field-input col-11" />
                        <button class="btn btn-transparent btn-pos btn-clear" type="button">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="form-group row d-flex justify-content-center mt-5">
                    <button class="btn btn-success mr-3"><i class="fas fa-check mr-2"></i><span>Confirm</span></button>
                    <button type="button" class="btn btn-danger" onclick="window.history.back();"><i class="fas fa-times mr-2"></i><span>Cancel</span></button>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
