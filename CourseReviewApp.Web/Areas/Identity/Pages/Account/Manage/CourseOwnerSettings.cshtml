@page
@model CourseOwnerSettingsModel
@{
    ViewData["Title"] = "Course owner settings";
    ViewData["ActivePage"] = ManageNavPages.CourseOwnerSettings;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <div class="custom-control custom-switch">
                    <input asp-for="Input.CourseInfoEmailsEnabled" type="checkbox" class="custom-control-input" id="switch-1" value="true">
                    <label class="custom-control-label" for="switch-1">Receive info emails about your courses.</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.BrandName"></label>
                <div class="d-flex">
                    <input asp-for="Input.BrandName" class="form-control col-12" />
                    <button class="btn btn-transparent btn-pos btn-clear" type="button">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <span asp-validation-for="Input.BrandName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.WebsiteUrl"></label>
                <div class="d-flex">
                    <input asp-for="Input.WebsiteUrl" class="form-control col-12" />
                    <button class="btn btn-transparent btn-pos btn-clear" type="button">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <span asp-validation-for="Input.WebsiteUrl" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center">
                <button id="update-profile-button" type="submit" class="btn btn-info shadow">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
