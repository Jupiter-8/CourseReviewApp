@page
@model CourseReviewApp.Web.Areas.Identity.Pages.Account.Manage.CourseClientSettingsModel
@{
    ViewData["Title"] = "Course client settings";
    ViewData["ActivePage"] = ManageNavPages.CourseClientSettings; 
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <div class="custom-control custom-switch">
                    <input asp-for="Input.ReviewInfoEmailsEnabled" type="checkbox" class="custom-control-input" id="switch-1" value="true">
                    <label class="custom-control-label" for="switch-1">Receive info emails about moderation of your reviews.</label>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button id="update-profile-button" type="submit" class="btn btn-info shadow">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
