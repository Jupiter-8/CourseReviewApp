@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete account";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <h3 class="text-danger">Warning</h3>
    <p>
        <strong>Deleted account cannot be recovered. All data related to your account like courses, comments, responses or votes also will
        be deleted.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group col-6">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        }
        <div class="d-flex justify-content-center">
            <button class="btn btn-danger shadow" type="submit">Confirm</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}