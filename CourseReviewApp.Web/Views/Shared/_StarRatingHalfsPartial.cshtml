@model double

<span>
    @for (int i = 1; i < 6; i++)
    {
        if (i <= Model)
        {
            <span><i class="text-warning fas fa-star"></i></span>
        }
        else if (i > Model && ((double)i - Model) <= 0.5)
        {
            <span><i class="text-warning fas fa-star-half-alt"></i></span>
        }
        else
        {
            <span><i class="text-warning far fa-star"></i></span>
        }
    }
</span>
