@model CourseReviewApp.Web.ViewModels.ChangeCourseStatusVm
@{
    ViewData["Title"] = "Change course status";
}

<div class="container">
    <div class="row d-flex justify-content-center mt-4">
        <div class="card bg-light p-3 col-12 col-sm-11 col-md-10 col-lg-8 col-xl-7">
            <h1 class="font-weight-light text-center">Change course status</h1>
            <hr />
            <form asp-action="ChangeCourseStatus">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h4 class="font-weight-light ml-3">Course: <span class="font-weight-bolder">@Model.Name</span></h4>
                <div class="form-group">
                    <input asp-for="Id" type="hidden" class="form-control" />
                    <input asp-for="OwnerId" type="hidden" class="form-control" />
                    <input asp-for="OwnerHasCourseInfoEmailsEnabled" type="hidden" />
                    <input asp-for="Name" type="hidden" class="form-control" />
                    <input type="hidden" asp-for="OwnerEmail" />
                </div>
                <div class="form-group col-8">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" asp-items="ViewBag.StatusValues" class="form-control">
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group row d-flex justify-content-center mt-5">
                    <button class="btn btn-success shadow mr-3"><i class="fas fa-check mr-2"></i><span>Confirm</span></button>
                    <button type="button" class="btn btn-danger btn-back shadow"><i class="fas fa-times mr-2"></i><span>Cancel</span></button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
