@model CourseReviewApp.Web.ViewModels.DeleteCourseVm
@{
    ViewData["Title"] = "Delete course";
}

<div class="container">
    <div class="d-flex row justify-content-center mt-4">
        <div class="card bg-light p-3 col-12 col-sm-11 col-md-10 col-lg-8 col-xl-7">
            <h1 class="font-weight-light text-center">Confirm course deletion</h1>
            <hr />
            <h3 class="font-weight-light mb-3">@(User.IsInRole("Admin") ? "Course" : "Your course")</h3>
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                @if (User.IsInRole("Admin"))
                {
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.OwnerName)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.OwnerName)
                    </dd>
                }
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ShortDescription)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ShortDescription)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DateAdded)
                </dt>
                <dd class="col-sm-9">
                    @Model.DateAdded.ToString("dd.MM.yyyy HH:mm:ss")
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DateEdited)
                </dt>
                <dd class="col-sm-9">
                    @(Model.DateEdited != null ? Model.DateEdited.Value.ToString("dd.MM.yyyy HH:mm:ss") : "Was not edited")
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CourseWebsiteUrl)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CourseWebsiteUrl)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CategoryName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AvgRating)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AvgRating)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Language)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Language)
                </dd>
            </dl>

            <form asp-action="DeleteCourse">
                <div class="form-group row d-flex justify-content-center mt-5">
                    <input asp-for="ImagePath" type="hidden" />
                    <input asp-for="Name" type="hidden" />
                    <input asp-for="OwnerEmail" type="hidden" />
                    <input asp-for="OwnerHasCourseInfoEmailsEnabled" type="hidden" />
                    <button class="btn btn-success shadow mr-3"><i class="fas fa-check mr-2"></i><span>Confirm</span></button>
                    <button type="button" class="btn btn-danger btn-back shadow"><i class="fas fa-times mr-2"></i><span>Cancel</span></button>
                </div>
            </form>
        </div>
    </div>
</div>
