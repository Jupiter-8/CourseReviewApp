@model CourseReviewApp.Web.ViewModels.CourseVm

<div class="container">
    <div class="row">
        <div class="card d-flex col-12 col-lg-9 col-xl-9 bg-light">
            <div class="d-flex row">
                <div class="col-4 col-sm-4 col-md-3 col-lg-3 col-xl-3">
                    <h1 class="display-3">
                        @Model.AvgRating.ToString("0.00")
                    </h1>
                    <div class="ml-3">
                        <partial name="_StarRatingHalfsPartial" model="@Model.AvgRating" />
                        <p class="text-secondary ml-3">@Model.Reviews.Count() reviews</p>
                    </div>
                </div>
                <div class="col-8 col-sm-8 col-md-9 col-lg-9 mt-3">
                    <div class="d-flex row">
                        <div class="col-6 col-sm-6 col-md-8 col-lg-8 col-xl-8 col-xl-8 mt-1">
                            <div class="progress mb-3">
                                <div class="progress-bar bg-info" role="progressbar" style="@($"width: {ViewBag.fiveStarPercent}%;")" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">@ViewBag.fiveStarPercent%</div>
                            </div>
                        </div>
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                            <span><i class="text-warning fas fa-star"></i></span>
                            <span><i class="text-warning fas fa-star"></i></span>
                            <span><i class="text-warning fas fa-star"></i></span>
                            <span><i class="text-warning fas fa-star"></i></span>
                            <span><i class="text-warning fas fa-star"></i></span>
                            <span class="text-secondary">(@Model.Reviews.Where(r => r.RatingValue == RatingValue.Rating_5).Count())</span>
                        </div>
                    </div>
                    <div class="d-flex row">
                        <div class="col-6 col-sm-6 col-md-8 col-lg-8 col-xl-8 mt-1">
