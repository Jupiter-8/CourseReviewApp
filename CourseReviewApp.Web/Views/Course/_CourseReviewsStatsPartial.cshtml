                            <span><i class="text-warning far fa-star"></i></span>
                            <span class="text-secondary">(@Model.Reviews.Where(r => r.RatingValue == RatingValue.Rating_4).Count())</span>
                        </div>
                    </div>
                    <div class="d-flex row">
